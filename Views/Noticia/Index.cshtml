@model Noticias
    @{
        ViewData["Title"] = "Not√≠cias";
    }

<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID</label>
    <input type="text" name="IdNoticia" />

    <label>Texto</label>
    <input type="text" name="Texto" />

    <label>Imagem</label>
    <input type="text" name="Imagem" />

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach(Noticias n in ViewBag.Noticias){
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Texto</td>
                <td>@n.Imagem</td>
            </tr>
        }
    </tbody>
</table>