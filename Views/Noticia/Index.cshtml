@model Noticias
    @{
        ViewData["Title"] = "Notícias";
    }

<div class="titulo_pagina">
    <h1>cadastro de noticia</h1>
</div>

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data" class="cadastro">

    <div class="campo">
        <label for="IdNoticia">ID</label>
        <input type="text" name="IdNoticia" id="IdNoticia"/>
    </div>

    <div class="campo">
        <label for="Texto">Texto</label>
        <input type="text" name="Texto" id="Texto"/>
    </div>

    <div class="campo">
        <label for="Imagem">Imagem</label>
        <input type="file" name="Imagem" id="Imagem"/>
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach(Noticias n in ViewBag.Noticias){
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Texto</td>
                <td>
                    <img src="img/Noticias/@n.Imagem" alt="Imagem da notícia @n.Texto" width="40">
                </td>
                <td>
                    <a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@n.IdNoticia">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>