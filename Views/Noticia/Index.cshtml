@model Noticias
    @{
        ViewData["Title"] = "Notícias";
    }

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdNoticia" />

    <label>Texto</label>
    <input type="text" name="Texto" />

    <label>Imagem</label>
    <input type="file" name="Imagem" />

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach(Noticias n in ViewBag.Noticias){
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Texto</td>
                <td><img src="img/Noticias/@n.Imagem" alt="Imagem da notícia @n.Texto" width="40"></td>
                <td><a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@n.IdNoticia">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>